<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.modup.fragment.SingleWorkoutItemDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@drawable/white_background_shadow">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


            <com.modup.font.RobotoTextView
                    android:id="@+id/textViewTitle"
                    style="@style/TextViewAppearance.Title1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="14dp"
                    android:paddingLeft="18dp"
                    android:text="Some Random Title about Fitness and other Goodness"
                    android:textSize="20sp"
                    app:typeface="robotoBold" android:layout_gravity="center" android:layout_weight="1"
                    android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:layout_gravity="center_horizontal"
                android:background="@color/material_grey_200"
                android:id="@+id/cardDivider" android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutType"
                android:focusableInTouchMode="true" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp">

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutType"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_blue"
                        android:text="Type:"
                        android:textSize="15sp"
                        app:typeface="robotoBold"
                        android:orientation="horizontal"
                        android:gravity="center" android:padding="5dp"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutTypeItem"
                        android:layout_weight="1"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For Time &amp; Reps"
                        android:textSize="15sp"
                        app:typeface="robotoBold" android:padding="5dp"/>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutCategory"
                android:focusableInTouchMode="true" android:layout_marginBottom="5dp">


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutCategory"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_blue"
                        android:text="Category:"
                        android:textSize="15sp"
                        app:typeface="robotoBold"
                        android:orientation="horizontal"
                        android:gravity="center" android:padding="5dp"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutCategoryItem"
                        android:layout_weight="1"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weightlifting"
                        android:textSize="15sp"
                        app:typeface="robotoBold" android:padding="5dp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:layout_gravity="center_horizontal"
                android:background="@color/material_grey_200"
                android:id="@+id/cardDivider2" android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:visibility="visible">
        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutWeightSetsReps"
                android:layout_marginBottom="5dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutWeight"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Weight:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutWeightItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/material_grey_200"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent">
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutSets"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Sets:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutSetsItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/material_grey_200"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent">
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutReps"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Reps:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutRepsItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:layout_gravity="center_horizontal"
                    android:background="@color/material_grey_200"
                    android:id="@+id/cardDivider3" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:layout_marginTop="5dp">
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutDistance">


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutDistance"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_blue"
                        android:text="Distance:"
                        android:textSize="15sp"
                        app:typeface="robotoBold"
                        android:orientation="horizontal"
                        android:gravity="center" android:padding="5dp"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutDistanceItem"
                        android:layout_weight="1"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100M"
                        android:textSize="15sp"
                        app:typeface="robotoBold" android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:layout_gravity="center_horizontal"
                    android:background="@color/material_grey_200"
                    android:id="@+id/cardDivider4" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:layout_marginTop="5dp">
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutForRepsTime">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForRepsTimeReps"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Reps:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForRepsTimeRepsItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/material_grey_200"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent">
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForRepsTimeTime"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Time:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForRepsTimeTimeItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10M"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:layout_gravity="center_horizontal"
                    android:background="@color/material_grey_200"
                    android:id="@+id/cardDivider5" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:layout_marginTop="5dp">
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutForReps">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForRepsSets"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Sets:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForRepsSetsItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/material_grey_200"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent">
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForRepsReps"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Reps:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForRepsRepsItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10M"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:layout_gravity="center_horizontal"
                    android:background="@color/material_grey_200"
                    android:id="@+id/cardDivider6" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:layout_marginTop="5dp"
                    android:focusable="true">
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutForTime">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForTime"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Time:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForTimeItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1H"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/material_grey_200"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:layout_gravity="center_horizontal"
                    android:background="@color/material_grey_200"
                    android:id="@+id/cardDivider7" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:layout_marginTop="5dp"
                    android:focusable="true">
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutForWeight">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForWeight"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Weight:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutForWeightItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1H"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/material_grey_200"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:layout_gravity="center_horizontal"
                    android:background="@color/material_grey_200"
                    android:id="@+id/cardDivider8" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:layout_marginTop="5dp"
                    android:focusable="true">
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayoutWorkoutDesc"
                android:layout_marginBottom="5dp">


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutDescription"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_blue"
                        android:text="Description:"
                        android:textSize="15sp"
                        app:typeface="robotoBold"
                        android:orientation="horizontal"
                        android:gravity="center" android:padding="5dp"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutDescriptionItem"
                        android:layout_weight="1"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="15sp"
                        app:typeface="robotoBold" android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <Button
            android:layout_width="55dp"
            android:isScrollContainer="false"
            android:layout_height="55dp"
            android:layout_margin="25dp"
            android:background="@drawable/back_selector"
            android:id="@+id/buttonBack" android:layout_gravity="left|bottom"/>

</FrameLayout>
