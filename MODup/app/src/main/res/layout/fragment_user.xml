<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.modup.fragment.UserFragment">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/image"
                    android:layout_weight="1"
                    android:layout_width="128dp"
                    android:src="@drawable/user"
                    android:layout_height="128dp"
                    android:layout_marginTop="25dp" android:layout_gravity="center"/>

            <com.modup.font.RobotoTextView
                    android:id="@+id/title"
                    android:layout_weight="1"
                    style="@style/TextViewAppearance.Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placeholder"
                    android:textSize="20sp"
                    app:typeface="robotoBold" android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@color/material_grey_500"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:layout_gravity="center_horizontal">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <ImageView

                        android:src="@drawable/friends"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageViewFriends" android:layout_weight="1"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewFriends"
                        android:layout_weight="1"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256"
                        android:textSize="20sp"
                        app:typeface="robotoBold" android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_width="35dp"
                        android:layout_weight="1"
                        android:src="@drawable/followers"
                        android:layout_height="35dp"
                        android:id="@+id/imageViewFollowers"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewFollowers"
                        android:layout_weight="1"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textSize="20sp"
                        app:typeface="robotoBold" android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
