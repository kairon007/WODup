<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.modup.fragment.UserFragment">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:background="@drawable/white_background_shadow">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/imageViewProfilePic"
                        android:layout_weight="1"
                        android:layout_width="128dp"
                        android:src="@drawable/user"
                        android:layout_height="128dp"
                        android:layout_marginTop="25dp" android:layout_gravity="center" android:clickable="true"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewTitle"
                        android:layout_weight="1"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Placeholder"
                        android:textSize="20sp"
                        app:typeface="robotoBold" android:layout_gravity="center"/>


            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/material_grey_200"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginBottom="10dp">

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewRecent"
                        style="@style/TextViewAppearance.Title1"
                        android:clickable="true"
                        android:textColor="@drawable/signinsignout_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent"
                        android:textSize="15sp"
                        app:typeface="robotoBold"
                        android:ellipsize="none" android:lines="1"
                        android:layout_weight="1" android:padding="5dp" android:gravity="center"/>


                <LinearLayout
                        android:orientation="horizontal"
                        android:background="@color/material_grey_200"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent" android:layout_gravity="center_horizontal"
                        >
                    </LinearLayout>



                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewFavorites"
                        style="@style/TextViewAppearance.Title1"
                        android:clickable="true"
                        android:textColor="@drawable/signinsignout_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorites"
                        android:textSize="15sp"
                        app:typeface="robotoBold"
                        android:ellipsize="none" android:lines="1"
                        android:layout_weight="1" android:padding="5dp" android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
        <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listViewRecent" android:headerDividersEnabled="true" android:divider="@null"/>
        <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listViewFavorites" android:headerDividersEnabled="true" android:divider="@null"/>
    </LinearLayout>


</FrameLayout>
