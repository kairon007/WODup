<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.modup.fragment.CalendarFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <com.squareup.timessquare.CalendarPickerView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dayBackground="@drawable/custom_calendar_bg_selector"
                />

    </LinearLayout>
    <Button
            android:layout_width="65dp"
            android:isScrollContainer="false"
            android:layout_height="65dp"
            android:layout_margin="25dp"
            android:background="@drawable/add_content_selector"
            android:id="@+id/buttonAddDate" android:layout_gravity="right|bottom"/>
</FrameLayout>
