<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.modup.fragment.CalendarFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <com.squareup.timessquare.CalendarPickerView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dayBackground="@drawable/custom_calendar_bg_selector"
                />

    </LinearLayout>

    <com.modup.font.RobotoTextView
            android:id="@+id/textViewTutorialCalendar"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_blue"
            android:text="Press any date to add a workout!"
            android:textSize="15sp"
            android:drawableTop="@drawable/ic_content_upward"
            app:typeface="robotoBold"
            android:orientation="horizontal"
            android:gravity="center" android:padding="5dp" android:ellipsize="none" android:layout_gravity="center"
            android:layout_margin="25dp"/>


    <Button
            android:layout_width="55dp"
            android:isScrollContainer="false"
            android:layout_height="55dp"
            android:layout_margin="25dp"
            android:background="@drawable/add_content_selector"
            android:id="@+id/buttonAddDate" android:layout_gravity="right|bottom"/>
</FrameLayout>
