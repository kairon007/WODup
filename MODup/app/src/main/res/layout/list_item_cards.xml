<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:layout_margin="5dp"
              xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">
        <LinearLayout
                android:orientation="vertical"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <ImageView
                        android:id="@+id/image"
                        android:layout_weight="1"
                        android:layout_width="64dp"
                        android:src="@drawable/user"
                        android:layout_height="64dp"
                        android:layout_margin="16dp"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/title"
                        android:layout_weight="1"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="14dp"
                        android:paddingLeft="18dp"
                        android:text="Placeholder"
                        android:textSize="20sp"
                        app:typeface="robotoBold" android:layout_gravity="center"/>


            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutStats"
                    android:layout_below="@+id/divider1" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:layout_marginTop="10dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayoutBurned"
                        android:layout_below="@+id/image" android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" android:gravity="center">

                    <ImageView
                            android:id="@+id/imageViewBurned"
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/flame"
                            android:layout_height="50dp"
                            android:layout_alignTop="@+id/linearLayout" android:layout_toLeftOf="@+id/title"
                            android:layout_toStartOf="@+id/title"/>
                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewBurned"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:paddingBottom="14dp"
                            android:paddingLeft="18dp"
                            android:text="1256"
                            android:textSize="20sp"
                            app:typeface="robotoBold"
                            android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/title"
                            android:layout_toEndOf="@+id/title"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayoutTime"
                        android:layout_below="@+id/image" android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" android:focusable="true" android:gravity="center">


                    <ImageView
                            android:id="@+id/imageViewTime"
                            android:layout_width="50dp"
                            android:src="@drawable/clock"
                            android:layout_gravity="center"
                            android:layout_height="50dp"
                            android:layout_below="@+id/image" android:layout_toRightOf="@+id/title"
                            android:layout_toEndOf="@+id/title" android:focusableInTouchMode="false"/>


                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewTime"
                            android:layout_gravity="center"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="14dp"
                            android:paddingLeft="18dp"
                            android:text="60 Minutes"
                            android:textSize="20sp"
                            app:typeface="robotoBold" android:layout_below="@+id/imageViewTime"
                            android:layout_alignRight="@+id/linearLayout" android:layout_alignEnd="@+id/linearLayout"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutSneakPeek"
                    android:focusable="true" android:gravity="center"
                    android:layout_below="@+id/linearLayoutStats" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:layout_marginTop="27dp">

                <ImageView
                        android:id="@+id/imageViewPeek1"
                        android:layout_width="25dp"
                        android:src="@drawable/clock"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:layout_below="@+id/image" android:layout_toRightOf="@+id/title"
                        android:layout_toEndOf="@+id/title" android:focusableInTouchMode="false"/>

                <ImageView
                        android:id="@+id/imageViewPeek2"
                        android:layout_width="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/clock"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:layout_below="@+id/image" android:layout_toRightOf="@+id/title"
                        android:layout_toEndOf="@+id/title" android:focusableInTouchMode="false"/>

                <ImageView
                        android:id="@+id/imageViewPeek3"
                        android:layout_width="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/clock"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:layout_below="@+id/image" android:layout_toRightOf="@+id/title"
                        android:layout_toEndOf="@+id/title" android:focusableInTouchMode="false"/>

                <ImageView
                        android:id="@+id/imageViewPeek4"
                        android:layout_width="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/clock"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:layout_below="@+id/image" android:layout_toRightOf="@+id/title"
                        android:layout_toEndOf="@+id/title" android:focusableInTouchMode="false"/>


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
