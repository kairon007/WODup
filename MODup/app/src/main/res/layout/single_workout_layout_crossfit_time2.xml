<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rippleview"
        app:rv_zoom="true"
        app:rv_zoomDuration="50"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        rv_centered="true">


    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewWorkoutName"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:text="Some workout name"
                        android:textSize="17sp"
                        app:typeface="robotoBold"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_weight="1" android:gravity="left"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:ellipsize="end"
                        android:maxLines="2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/material_grey_200"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" android:layout_marginBottom="3dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" android:layout_weight="1">
                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutType"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Type:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutTypeItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For Time &amp; Reps"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/material_grey_200"
                        android:layout_height="fill_parent">
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" android:layout_weight="1">
                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewSet"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="T:"
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewSetsItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout android:orientation="vertical" android:background="@color/material_grey_200"
                          android:layout_width="fill_parent" android:layout_height="1dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" android:layout_marginBottom="3dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" android:layout_weight="1">
                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutDescription"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_blue"
                            android:text="Description: "
                            android:textSize="15sp"
                            app:typeface="robotoBold"
                            android:orientation="horizontal"
                            android:gravity="center" android:padding="5dp" android:ellipsize="none"/>

                    <com.modup.font.RobotoTextView
                            android:id="@+id/textViewWorkoutDescriptionItem"
                            android:layout_weight="1"
                            style="@style/TextViewAppearance.Title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180"
                            android:textSize="15sp"
                            app:typeface="robotoBold" android:padding="5dp" android:maxLines="3"
                            android:ellipsize="end"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.andexert.library.RippleView>
