<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.modup.fragment.FeedFragment">

    <!-- TODO: Update blank fragment layout -->

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listViewFeed" android:layout_gravity="center"/>
    <Button
            android:layout_width="65dp"
            android:elevation="4dp"
            android:background="@drawable/add_content_selector"
            android:layout_margin="25dp"
            android:layout_height="65dp"
            android:id="@+id/buttonAdd" android:layout_gravity="right|bottom"/>

    <Button
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:isScrollContainer="false"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/add_favorite_content_selector"
            android:id="@+id/buttonAddFavorite" android:layout_gravity="right|bottom"/>
</FrameLayout>
