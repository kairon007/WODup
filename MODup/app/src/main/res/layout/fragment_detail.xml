<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.modup.fragment.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/white_background_shadow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <ImageView
                        android:id="@+id/imageViewProfilePic"
                        android:layout_width="64dp"
                        android:src="@drawable/user"
                        android:layout_height="64dp"
                        android:layout_margin="16dp"/>

                <com.modup.font.RobotoTextView
                        android:id="@+id/textViewTitle"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingBottom="14dp"
                        android:paddingLeft="18dp"
                        android:text="Some Random Title about Fitness and other Goodness"
                        android:textSize="20sp"
                        app:typeface="robotoBold" android:layout_gravity="center" android:layout_weight="1"
                        android:gravity="center"/>


            </LinearLayout>

z

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginBottom="10dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/linearLayoutStats"
                            android:layout_below="@+id/divider1" android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_weight="1">

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/linearLayoutBurned"
                                android:layout_below="@+id/imageViewProfilePic" android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" android:gravity="left"
                                android:layout_marginBottom="2dp">

                            <ImageView
                                    android:id="@+id/imageViewDifficulty"
                                    android:layout_width="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/skull"
                                    android:layout_height="30dp"
                                    android:layout_alignTop="@+id/divider2"
                                    android:layout_toLeftOf="@+id/textViewTitle"
                                    android:layout_toStartOf="@+id/textViewTitle"/>
                            <com.modup.font.RobotoTextView
                                    android:id="@+id/textViewDifficulty"
                                    style="@style/TextViewAppearance.Title1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hard"
                                    android:textSize="13sp"
                                    app:typeface="robotoBold"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toRightOf="@+id/textViewTitle"
                                    android:layout_toEndOf="@+id/textViewTitle"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/linearLayoutTime"
                                android:layout_below="@+id/imageViewProfilePic" android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" android:layout_marginTop="3dp"
                                >


                            <ImageView
                                    android:id="@+id/imageViewTime"
                                    android:layout_width="29dp"
                                    android:src="@drawable/clock"
                                    android:layout_gravity="center"
                                    android:layout_height="29dp"
                                    />


                            <com.modup.font.RobotoTextView
                                    android:id="@+id/textViewTime"
                                    style="@style/TextViewAppearance.Title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1H 30M"
                                    android:textSize="13sp"
                                    app:typeface="robotoBold" android:layout_below="@+id/imageViewTime"
                                    android:layout_alignRight="@+id/divider2"
                                    android:layout_alignEnd="@+id/divider2" android:ellipsize="none"
                                    android:lines="1"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/linearLayoutSocial"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" android:layout_weight="1"
                            android:gravity="right">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:id="@+id/linearLayoutLike"
                                android:layout_weight="1">

                            <ImageView
                                    android:layout_width="41dp"
                                    android:clickable="true"
                                    android:layout_height="41dp"
                                    android:src="@drawable/like_blank_content_selector"
                                    android:id="@+id/imageViewLike"
                                    android:layout_gravity="center"/>

                            <com.modup.font.RobotoTextView
                                    android:id="@+id/textViewLikeCount"
                                    style="@style/TextViewAppearance.Title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="13sp"
                                    app:typeface="robotoBold" android:ellipsize="none"
                                    android:lines="1" android:layout_gravity="center" android:padding="5dp"/>

                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:id="@+id/linearLayoutFavorite"
                                android:layout_weight="1">
                            <ImageView
                                    android:layout_width="41dp"
                                    android:clickable="true"
                                    android:layout_height="41dp"
                                    android:src="@drawable/favorite_blank_content_selector"
                                    android:id="@+id/imageViewFavorite" android:layout_gravity="center"
                                    />

                            <com.modup.font.RobotoTextView
                                    android:id="@+id/textViewFavoriteCount"
                                    style="@style/TextViewAppearance.Title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="13sp"
                                    app:typeface="robotoBold" android:ellipsize="none"
                                    android:lines="1" android:padding="5dp" android:layout_gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:id="@+id/linearLayoutComment"
                                android:layout_weight="1">
                            <ImageView
                                    android:layout_width="41dp"
                                    android:clickable="true"
                                    android:layout_height="41dp"
                                    android:src="@drawable/chat_content_selector"
                                    android:id="@+id/imageViewComments" android:layout_gravity="center"
                                    />

                            <com.modup.font.RobotoTextView
                                    android:id="@+id/textViewCommentCount"
                                    style="@style/TextViewAppearance.Title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1580"
                                    android:textSize="13sp"
                                    app:typeface="robotoBold" android:ellipsize="none"
                                    android:lines="1" android:padding="5dp" android:layout_gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ListView
                android:layout_width="fill_parent"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:layout_height="fill_parent"
                android:id="@+id/listViewWorkoutDetails"/>
    </LinearLayout>

    <Button
            android:layout_width="55dp"
            android:isScrollContainer="false"
            android:layout_height="55dp"
            android:layout_margin="25dp"
            android:background="@drawable/back_selector"
            android:id="@+id/buttonBack" android:layout_gravity="left|bottom"/>
</FrameLayout>
